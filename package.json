{
  "name": "mix-online",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "docs:api:build": "bash ./scripts/build-api-reference-site.sh ./site",
    "db:start": "bash ./scripts/db-start.sh",
    "db:status": "supabase status",
    "db:reset": "supabase db reset --local",
    "db:stop": "supabase stop",
    "lint": "biome check .",
    "check:contract-literals": "bash ./scripts/check-contract-literals.sh",
    "lint:fix": "biome check --write .",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:unit": "vitest run apps/server/src/__tests__/unit packages/shared/src/__tests__",
    "test:integration": "vitest run apps/server/src/__tests__/integration",
    "test:e2e": "vitest run apps/server/src/__tests__/e2e"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
